        var year = 2025;
        var month = 11; // 0-indexed for December
        
        var holidays = {}; // No specific holidays mentioned in doc

        function generateMonthView() {
            const container = document.getElementById('month-view-container');
            const daysInMonth = new Date(year, month + 1, 0).getDate();

            let calendarHTML = `
                <div class="hidden md:block">
                    <div class="flex items-center justify-center mb-4"><h2 class="text-xl font-bold text-gray-700">2025年 12月</h2></div>
                    <div class="grid grid-cols-5 gap-1 text-center font-semibold text-gray-600">
                        <div class="py-2">一</div><div class="py-2">二</div><div class="py-2">三</div><div class="py-2">四</div><div class="py-2">五</div>
                    </div>
                    <div class="grid grid-cols-5 gap-1 calendar-grid">
            `;
            
            const firstDate = new Date(year, month, 1);
            let emptyCells = (firstDate.getDay() + 6) % 7;
            
            for (let i = 0; i < emptyCells; i++) calendarHTML += `<div class="bg-gray-50 rounded-lg"></div>`;

            for (let day = 1; day <= daysInMonth; day++) {
                const dayOfWeek = new Date(year, month, day).getDay();
                if (dayOfWeek === 6 || dayOfWeek === 0) continue;

                const dayEvents = events.filter(e => e.date === day);
                const holidayInfo = holidays[day];
                
                calendarHTML += `<div class="day-cell border border-gray-200 ${holidayInfo ? 'bg-gray-50' : 'bg-white'} rounded-lg p-2 flex flex-col relative">
                        <div class="text-sm font-bold self-start mb-1 text-gray-700 w-7 h-7 flex items-center justify-center rounded-full">${day}</div>
                        <div class="flex-grow overflow-y-auto space-y-1 pr-1">`;

                if (holidayInfo) {
                    calendarHTML += `<div class="h-full flex items-center justify-center"><div class="bg-green-100 text-green-800 rounded-md p-2 text-sm font-semibold text-center flex flex-col items-center justify-center gap-1 w-full"><span class="text-2xl">${holidayInfo.icon}</span><span>${holidayInfo.name}</span></div></div>`;
                } else if (dayEvents.length > 0) {
                    dayEvents.sort((a, b) => a.time.localeCompare(b.time)).forEach(event => {
                         const tooltipContent = createTooltipContent(event);
                         const colorClasses = eventTypeColors[event.type] || eventTypeColors.default;
                         calendarHTML += `<div data-tippy-content='${tooltipContent.replace(/'/g, "&apos;")}' class="event ${colorClasses} rounded-md p-1.5 text-xs border cursor-pointer"><p class="font-semibold truncate">${event.title}</p><p class="text-xs opacity-80 truncate">${event.time}</p><p class="text-xs font-medium text-gray-600 mt-1 flex items-center"><svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0zM15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg><span class="truncate">${event.location}</span></p></div>`;
                    });
                }
                calendarHTML += `</div></div>`;
            }
            calendarHTML += '</div></div>';
            container.innerHTML = calendarHTML;
        }

        function generateListView() {
            const container = document.getElementById('list-view-container');
            const today = new Date(); 
            const currentDay = (today.getFullYear() === year && today.getMonth() === month) ? today.getDate() : 0; 
            const daysInMonth = new Date(year, month + 1, 0).getDate();
            const weekdays = ["日", "一", "二", "三", "四", "五", "六"];
            
            let upcomingEventsHTML = '';

            for (let day = 1; day <= daysInMonth; day++) {
                const currentDate = new Date(year, month, day);
                if (currentDate.getDay() === 0 || currentDate.getDay() === 6) continue;
                
                const dayEvents = events.filter(e => e.date === day);
                const holidayInfo = holidays[day];
                let dayHTML = '';

                if (dayEvents.length > 0 || holidayInfo) {
                    dayHTML += `<div class="bg-white rounded-lg shadow overflow-hidden mb-4"><div class="bg-gray-50 px-4 py-3 border-b font-bold text-gray-700">12月 ${day}日, 星期${weekdays[currentDate.getDay()]}</div><div class="px-4 py-3 space-y-3">`;
                    if (holidayInfo) dayHTML += `<div class="bg-green-100 text-green-800 rounded-md p-3 text-sm font-semibold text-center flex items-center justify-center gap-2 w-full"><span class="text-2xl">${holidayInfo.icon}</span><span>${holidayInfo.name}</span></div>`;
                    dayEvents.sort((a, b) => a.time.localeCompare(b.time)).forEach(event => {
                        const tooltipContent = createTooltipContent(event);
                        const colorClasses = eventTypeColors[event.type] || eventTypeColors.default;
                        dayHTML += `<div data-tippy-content='${tooltipContent.replace(/'/g, "&apos;")}' class="event ${colorClasses} rounded-lg p-3 text-sm border cursor-pointer"><p class="font-semibold">${event.title}</p><p class="text-sm opacity-80">${event.time}</p><p class="text-sm font-medium text-gray-600 mt-1 flex items-center"><svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0zM15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg><span>${event.location}</span></p></div>`;
                    });
                    dayHTML += '</div></div>';
                }
                upcomingEventsHTML += dayHTML;
            }

            let finalHTML = '<div class="block md:hidden space-y-0">';
            finalHTML += upcomingEventsHTML;
            finalHTML += '</div>';
            container.innerHTML = finalHTML;
        }

        function createTooltipContent(event) {
            let bodyHTML = `<div class="p-4 text-left max-w-sm w-screen space-y-3">`;
            
            bodyHTML += `<h3 class="text-lg font-bold text-gray-900">${event.title}</h3>`;

            bodyHTML += `<div class="space-y-2 text-sm">
                <div class="flex items-center text-gray-600">
                    <svg class="w-5 h-5 mr-2 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    <strong>時間：</strong><span class="ml-1">${event.time}</span>
                </div>
                <div class="flex items-center text-gray-600">
                    <svg class="w-5 h-5 mr-2 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0zM15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                    <strong>地點：</strong><span class="ml-1">${event.location}</span>
                </div>
            </div>`;
            
            const d = event.details;
            let personnelHTML = '';
            
            if (d.instructors && d.instructors.length) {
                personnelHTML += `<div class="flex items-start"><div class="w-6 text-center mr-2"><svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg></div><p class="text-gray-700 text-sm"><strong class="font-semibold">指導教師：</strong>${d.instructors.join('、 ')}</p></div>`;
            }

            if (d.presenter && d.presenter === d.recorder) {
                personnelHTML += `<div class="flex items-start mt-2"><div class="w-6 text-center mr-2"><svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.5L14.732 3.732z"></path></svg></div><p class="text-gray-700 text-sm"><strong class="font-semibold">報告/記錄者：</strong>${d.presenter}</p></div>`;
            } else {
                if (d.presenter) {
                    personnelHTML += `<div class="flex items-start mt-2"><div class="w-6 text-center mr-2"><svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path></svg></div><p class="text-gray-700 text-sm"><strong class="font-semibold">報告者：</strong>${d.presenter}</p></div>`;
                }
                if (d.recorder) {
                    personnelHTML += `<div class="flex items-start mt-2"><div class="w-6 text-center mr-2"><svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg></div><p class="text-gray-700 text-sm"><strong class="font-semibold">記錄者：</strong>${d.recorder}</p></div>`;
                }
            }

            if(personnelHTML) {
                 bodyHTML += `<div class="border-t pt-3 mt-3">${personnelHTML}</div>`;
            }
            
            if (d.participants && d.participants.length) {
                bodyHTML += `<div class="border-t pt-3 mt-3">
                    <div class="flex items-start">
                        <div class="w-6 text-center mr-2 mt-0.5"><svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283-.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg></div>
                        <div>
                            <strong class="font-semibold text-gray-700 text-sm">參與學員</strong>
                            <div class="text-gray-600 text-sm grid grid-cols-2 sm:grid-cols-3 gap-x-4 gap-y-1 mt-1">${d.participants.map(p => `<span>${p}</span>`).join('')}</div>
                        </div>
                    </div>
                </div>`;
            }

            if (d.notes) {
                 bodyHTML += `<div class="border-t pt-3 mt-3 flex items-start">
                    <div class="w-6 text-center mr-2 mt-0.5"><svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg></div>
                    <p class="text-gray-700 text-sm"><strong class="font-semibold">備註：</strong>${d.notes}</p>
                 </div>`;
            }
            
            bodyHTML += `</div>`;
            return bodyHTML;
        }

        function createDeptTooltipContent(dept) {
            const allDoctors = [...doctorSchedule.pgy_cr, ...doctorSchedule.pgy1, ...doctorSchedule.pgy2, ...doctorSchedule.ugy];
            const deptMembers = allDoctors.filter(d => d.department === dept);

            let content = `<div class="p-4 text-left max-w-md w-screen space-y-3">
                             <h3 class="text-xl font-bold text-gray-900 mb-3">${dept}</h3>
                             <div class="space-y-4">`;
            
            deptMembers.forEach(member => {
                let role = '';
                let roleColor = 'bg-gray-200 text-gray-700';
                if (doctorSchedule.pgy_cr.includes(member)) { role = 'PGY CR'; roleColor = 'bg-purple-100 text-purple-700'; }
                if (doctorSchedule.pgy1.includes(member)) { role = 'PGY1'; roleColor = 'bg-indigo-100 text-indigo-700'; }
                if (doctorSchedule.pgy2.includes(member)) { role = 'PGY2'; roleColor = 'bg-teal-100 text-teal-700'; }
                if (doctorSchedule.ugy.includes(member)) { role = 'UGY'; roleColor = 'bg-orange-100 text-orange-700'; }

                content += `
                    <div class="border-t pt-3">
                        <div class="flex justify-between items-start">
                           <div>
                                <p class="text-base font-bold text-gray-900">${member.student}</p>
                                <p class="text-sm text-gray-600 mt-1"><strong>臨床教師：</strong> ${member.teacher}</p>
                                <p class="text-sm text-gray-600"><strong>訓練期間：</strong> ${member.period}</p>
                           </div>
                           <span class="text-xs font-medium ${roleColor} px-2 py-0.5 rounded-full">${role}</span>
                        </div>
                    </div>
                `;
            });

            content += `</div></div>`;
            return content;
        }
        
        function generateScheduleView() {
            const container = document.getElementById('schedule-panel');
            const allDoctors = [...doctorSchedule.pgy_cr, ...doctorSchedule.pgy1, ...doctorSchedule.pgy2, ...doctorSchedule.ugy];
            
            let scheduleHTML = `<div class="space-y-6">`;

            // PGY CR Section
            scheduleHTML += `
                <div>
                    <div class="w-full text-left bg-gray-100 text-gray-800 font-bold p-4 rounded-lg flex justify-between items-center">
                        <div class="flex items-center">
                            <h2 class="text-2xl font-bold text-purple-600">PGY CR</h2>
                        </div>
                    </div>
                    <div class="mt-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                         ${doctorSchedule.pgy_cr.map(item => `
                         <div class="bg-white rounded-lg shadow-md border border-gray-200 overflow-hidden" data-dept="PGY CR">
                            <div class="p-5">
                                <div class="flex items-start space-x-4">
                                    <div class="flex-shrink-0 w-12 h-12 rounded-full bg-purple-100 text-purple-600 flex items-center justify-center">
                                        <span class="font-bold text-lg">CR</span>
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <p class="text-base font-bold text-gray-900">${item.student}</p>
                                    </div>
                                </div>
                            </div>
                        </div>`).join('')}
                    </div>
                </div>`;


            // PGY1 Collapsible Section
            scheduleHTML += `
                <div data-dept-group="pgy1">
                    <button id="toggle-pgy1" class="w-full text-left bg-gray-100 hover:bg-gray-200 text-gray-800 font-bold p-4 rounded-lg flex justify-between items-center transition">
                        <div class="flex items-center">
                            <h2 class="text-2xl font-bold text-indigo-600">PGY1</h2>
                            <span class="ml-3 bg-indigo-200 text-indigo-800 text-sm font-semibold px-2.5 py-0.5 rounded-full">共 ${doctorSchedule.pgy1.length} 人</span>
                        </div>
                        <svg id="toggle-icon-pgy1" class="w-6 h-6 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"></path></svg>
                    </button>
                    <div id="pgy1-content" class="hidden mt-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">`;
            doctorSchedule.pgy1.forEach(item => {
                const teachersHTML = item.teacher.split(', ').map(t => `<p class="text-sm text-gray-500">${t}</p>`).join('');
                scheduleHTML += `
                    <div class="bg-white rounded-lg shadow-md border border-gray-200 overflow-hidden" data-dept="${item.department}">
                        <div class="p-5">
                            <div class="flex items-start space-x-4">
                                <div class="flex-shrink-0 w-12 h-12 rounded-full bg-indigo-100 text-indigo-600 flex items-center justify-center">
                                    <span class="font-bold text-lg">Y1</span>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="text-base font-bold text-gray-900">${item.student}</p>
                                    <div class="text-xs font-semibold text-indigo-600 bg-indigo-100 inline-block px-2 py-0.5 rounded-full my-1">${item.department}</div>
                                    <div class="mt-1">${teachersHTML}</div>
                                </div>
                            </div>
                        </div>
                        <div class="bg-gray-50 px-5 py-3 border-t border-gray-200 flex items-center text-sm text-gray-600">
                           <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                            <span>訓練期間: ${item.period}</span>
                        </div>
                    </div>`;
            });
            scheduleHTML += `</div></div>`;
            
            // PGY2 Collapsible Section
            scheduleHTML += `
                <div data-dept-group="pgy2">
                    <button id="toggle-pgy2" class="w-full text-left bg-gray-100 hover:bg-gray-200 text-gray-800 font-bold p-4 rounded-lg flex justify-between items-center transition">
                        <div class="flex items-center">
                            <h2 class="text-2xl font-bold text-teal-600">PGY2</h2>
                            <span class="ml-3 bg-teal-100 text-teal-800 text-sm font-semibold px-2.5 py-0.5 rounded-full">共 ${doctorSchedule.pgy2.length} 人</span>
                        </div>
                        <svg id="toggle-icon-pgy2" class="w-6 h-6 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"></path></svg>
                    </button>
                    <div id="pgy2-content" class="hidden mt-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">`;
            doctorSchedule.pgy2.forEach(item => {
                const teachersHTML = item.teacher.split(', ').map(t => `<p class="text-sm text-gray-500">${t}</p>`).join('');
                scheduleHTML += `
                     <div class="bg-white rounded-lg shadow-md border border-gray-200 overflow-hidden" data-dept="${item.department}">
                        <div class="p-5">
                            <div class="flex items-start space-x-4">
                                <div class="flex-shrink-0 w-12 h-12 rounded-full bg-teal-100 text-teal-600 flex items-center justify-center">
                                    <span class="font-bold text-lg">Y2</span>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="text-base font-bold text-gray-900">${item.student}</p>
                                    <div class="text-xs font-semibold text-teal-600 bg-teal-100 inline-block px-2 py-0.5 rounded-full my-1">${item.department}</div>
                                    <div class="mt-1">${teachersHTML}</div>
                                </div>
                            </div>
                        </div>
                        <div class="bg-gray-50 px-5 py-3 border-t border-gray-200 flex items-center text-sm text-gray-600">
                           <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                            <span>訓練期間: ${item.period}</span>
                        </div>
                    </div>`;
            });
            scheduleHTML += `</div></div>`;
            
             // UGY Collapsible Section
            scheduleHTML += `
                <div data-dept-group="ugy">
                    <button id="toggle-ugy" class="w-full text-left bg-gray-100 hover:bg-gray-200 text-gray-800 font-bold p-4 rounded-lg flex justify-between items-center transition">
                        <div class="flex items-center">
                            <h2 class="text-2xl font-bold text-orange-600">UGY</h2>
                            <span class="ml-3 bg-orange-200 text-orange-800 text-sm font-semibold px-2.5 py-0.5 rounded-full">共 ${doctorSchedule.ugy.length} 人</span>
                        </div>
                        <svg id="toggle-icon-ugy" class="w-6 h-6 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"></path></svg>
                    </button>
                    <div id="ugy-content" class="hidden mt-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        ${doctorSchedule.ugy.map(item => `
                         <div class="bg-white rounded-lg shadow-md border border-gray-200 overflow-hidden" data-dept="${item.department}">
                            <div class="p-5">
                                <div class="flex items-start space-x-4">
                                    <div class="flex-shrink-0 w-12 h-12 rounded-full bg-orange-100 text-orange-600 flex items-center justify-center">
                                        <span class="font-bold text-base">UGY</span>
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <p class="text-base font-bold text-gray-900">${item.student}</p>
                                        <div class="text-xs font-semibold text-orange-600 bg-orange-100 inline-block px-2 py-0.5 rounded-full my-1">${item.department}</div>
                                        <div class="mt-1"><p class="text-sm text-gray-500">臨床教師: ${item.teacher}</p></div>
                                    </div>
                                </div>
                            </div>
                            <div class="bg-gray-50 px-5 py-3 border-t border-gray-200 flex items-center text-sm text-gray-600">
                               <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                                <span>訓練期間: ${item.period}</span>
                            </div>
                        </div>`).join('')}
                    </div>
                </div>`;
            
            // Department Summary Section
            let deptSummary = {};
            const deptIcons = {
                '一般內': 'https://raw.githubusercontent.com/guguguuuuu/chimeiGM/main/CM-GM.png',
                '胸腔': 'https://raw.githubusercontent.com/guguguuuuu/chimeiGM/main/CM-Chest.png',
                '腎臟': 'https://raw.githubusercontent.com/guguguuuuu/chimeiGM/main/CM-Nephro.png',
                '胃腸': 'https://raw.githubusercontent.com/guguguuuuu/chimeiGM/main/CM-GI.png',
                '感染': 'https://raw.githubusercontent.com/guguguuuuu/chimeiGM/main/CM-INF.png',
                '神內': 'https://raw.githubusercontent.com/guguguuuuu/chimeiGM/main/CM-neurology.png',
                '心內': 'https://raw.githubusercontent.com/guguguuuuu/chimeiGM/main/CM-CV.png',
                '血腫': 'https://raw.githubusercontent.com/guguguuuuu/chimeiGM/main/CM-Oncology.png'
            };
            const deptColors = {
                '一般內': 'bg-blue-100 text-blue-800 border-blue-500', 
                '胸腔': 'bg-sky-100 text-sky-800 border-sky-500', 
                '腎臟': 'bg-green-100 text-green-800 border-green-500',
                '胃腸': 'bg-amber-100 text-amber-800 border-amber-500', 
                '感染': 'bg-red-100 text-red-800 border-red-500', 
                '神內': 'bg-purple-100 text-purple-800 border-purple-500',
                '心內': 'bg-pink-100 text-pink-800 border-pink-500', 
                '血腫': 'bg-rose-100 text-rose-800 border-rose-500'
            };

            allDoctors.forEach(d => {
                if (d.department && d.department !== 'PGY CR') {
                    if (!deptSummary[d.department]) {
                        deptSummary[d.department] = { pgy1: 0, pgy2: 0, ugy: 0, total: 0 };
                    }
                    deptSummary[d.department].total++;
                    if (doctorSchedule.pgy1.includes(d)) deptSummary[d.department].pgy1++;
                    if (doctorSchedule.pgy2.includes(d)) deptSummary[d.department].pgy2++;
                    if (doctorSchedule.ugy.includes(d)) deptSummary[d.department].ugy++;
                }
            });

            scheduleHTML += `<div>
                <h2 class="text-2xl font-bold text-gray-800 mb-4 border-l-4 border-gray-500 pl-3">科別總覽</h2>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">`;
            
            Object.keys(deptSummary).sort().forEach(dept => {
                const summary = deptSummary[dept];
                const colors = deptColors[dept] || 'bg-gray-100 text-gray-800 border-gray-500';
                scheduleHTML += `
                    <div class="dept-summary-card bg-white rounded-lg border-l-4 ${colors.split(' ')[2]} shadow-sm flex flex-col justify-between" data-dept="${dept}">
                        <div class="p-4 text-center">
                             <div class="w-16 h-16 rounded-full ${colors.split(' ')[0]} flex items-center justify-center mx-auto">
                               <img src="${deptIcons[dept] || ''}" alt="${dept} icon" class="w-10 h-10 object-contain">
                            </div>
                            <h3 class="font-bold text-2xl text-gray-800 mt-3">${dept}</h3>
                            <p class="font-semibold text-lg text-gray-500">共 ${summary.total} 人</p>
                        </div>
                        <div class="bg-gray-50 p-2 rounded-b-lg mt-2 flex justify-center space-x-2">
                            ${summary.pgy1 > 0 ? `<div class="text-center px-2"><div class="font-bold text-indigo-800 text-3xl">${summary.pgy1}</div><div class="text-xs text-indigo-700">PGY1</div></div>` : ''}
                            ${summary.pgy2 > 0 ? `<div class="text-center px-2"><div class="font-bold text-teal-800 text-3xl">${summary.pgy2}</div><div class="text-xs text-teal-700">PGY2</div></div>` : ''}
                            ${summary.ugy > 0 ? `<div class="text-center px-2"><div class="font-bold text-orange-800 text-3xl">${summary.ugy}</div><div class="text-xs text-orange-700">UGY</div></div>` : ''}
                        </div>
                    </div>
                `;
            });
            scheduleHTML += `</div></div>`;

             // Other Info
            if (doctorSchedule.other && doctorSchedule.other.length > 0) {
                 scheduleHTML += `<div class="mt-8"><h2 class="text-2xl font-bold text-gray-800 mb-4 border-l-4 border-amber-500 pl-3">其他</h2>
                                 <div class="bg-gray-50 p-4 rounded-lg border border-gray-200"><ul class="list-disc list-inside space-y-2 text-gray-700">`;
                doctorSchedule.other.forEach(item => {
                     scheduleHTML += `<li>${item}</li>`;
                });
                scheduleHTML += `</ul></div></div>`;
            }


            scheduleHTML += `</div>`;
            container.innerHTML = scheduleHTML;
        }

        document.addEventListener('DOMContentLoaded', () => {
            // Initial generation
            generateMonthView();
            generateListView();
            generateScheduleView();
            
            // Setup Tippy for tooltips
            tippy('[data-tippy-content]', {
                content(reference) {
                    return reference.getAttribute('data-tippy-content');
                },
                allowHTML: true,
                theme: 'light',
                interactive: true,
                animation: 'scale-subtle',
                placement: 'auto',
                delay: [100, 200],
                trigger: 'mouseenter click',
                hideOnClick: true,
            });

            // Tab functionality
            const tabs = document.querySelectorAll('.tab');
            const panels = document.querySelectorAll('.tab-panel');
            
            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    tabs.forEach(t => t.classList.remove('active'));
                    panels.forEach(p => p.classList.add('hidden'));

                    tab.classList.add('active');
                    const panelId = tab.id.replace('tab-', '') + '-panel';
                    document.getElementById(panelId).classList.remove('hidden');
                });
            });

            // Setup listeners for the collapsible schedule sections
            ['pgy1', 'pgy2', 'ugy'].forEach(type => {
                const button = document.getElementById(`toggle-${type}`);
                if (button) {
                    button.addEventListener('click', () => {
                        document.getElementById(`${type}-content`).classList.toggle('hidden');
                        document.getElementById(`toggle-icon-${type}`).classList.toggle('rotate-180');
                    });
                }
            });

            // Department popup functionality
            const deptCards = document.querySelectorAll('.dept-summary-card');
            let deptTippyInstances = [];

            deptCards.forEach(card => {
                const dept = card.dataset.dept;
                const instance = tippy(card, {
                    content: createDeptTooltipContent(dept),
                    allowHTML: true,
                    theme: 'light',
                    interactive: true,
                    animation: 'scale-subtle',
                    placement: 'bottom',
                    trigger: 'click',
                    hideOnClick: true,
                     onShow() {
                        deptTippyInstances.forEach(i => {
                            if (i !== instance) i.hide();
                        });
                    }
                });
                deptTippyInstances.push(instance);
            });
        });
    </script>
</body>
</html>
