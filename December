        var eventTypeColors = {
            conference: 'bg-red-100 text-red-800 border-red-200',
            lecture: 'bg-purple-100 text-purple-800 border-purple-200',
            course: 'bg-green-100 text-green-800 border-green-200',
            skill: 'bg-yellow-100 text-yellow-800 border-yellow-200',
